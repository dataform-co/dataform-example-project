config {
  type: "table",
  schema: "sources",
  tags: ["staging", "daily"],
  description: "Cleaned version of the raw shopify.orders table."
}

select
  id AS order_id,
  date,
  customer_id,
  status as order_status,
  payment_id,
  coalesce(cast(item_count as int), 0) as item_count
from
  ${ref("shopify", "orders")}
  